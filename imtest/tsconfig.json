  "compilerOptions": {
    "module": "node16",
    "target": "es2017",
    "moduleResolution": "node16",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
  },
