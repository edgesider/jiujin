<view class="top-container">
  <view style="width: 100%; background: white; height: {{StatusBar}}px" />
  <view
    class="top"
    style="height: {{CustomBar}}px; padding-left: calc(var(--logo-width) + 20rpx); padding-right: {{ScreenSize[0] - MenuButton.left}}px"
  >
    <image class="app-logo" src="../../images/LOGO.png" mode="aspectFit" />
    <view
      class="search"
      bindtap="onSearchClick"
    >
      <image src="../../images/search.png" />
    </view>
  </view>
</view>

<scroll-view
  style="margin-top: {{TopBarHeight}}px; height: calc(100vh - {{TopBarHeight + BottomBarHeight}}px);"
  scroll-y="true"
  scroll-with-animation="true"
  refresher-enabled="{{pullDownRefreshing || !isLoading}}"
  refresher-triggered="{{pullDownRefreshing}}"
  bindrefresherrefresh="onRefresherRefresh"
  bindscrolltolower="onReachBottom"
  lower-threshold="400"
>
  <view>
    <swiper autoplay circular class="top-swiper">
      <swiper-item wx:for="{{banners}}" wx:key="url">
        <image
          src="{{item.url}}"
          style="width: 100%; height: 100%;"
          mode="aspectFill"
          data-url="{{item.url}}"
          bindtap="onClickBanner"
        />
      </swiper-item>
    </swiper>

    <view class="region-filter">
      <scroll-view scroll-x>
        <view
          class="{{selectedRegionIndex === idx ?'item-on':'item'}}"
          wx:for="{{regions}}"
          wx:key="_id"
          wx:for-index="idx"
          bind:tap="onRegionClick"
          data-idx="{{idx}}"
        >
          {{item.name}}
        </view>
      </scroll-view>
      <image class="switch" src="/images/switch.png" bind:tap="onClickRankingSwitch" />
    </view>

    <view class="ranking" wx:if="{{showRankingPopup}}">
      <view
        wx:for="{{rankingOptions}}" wx:key="unique" wx:for-index="idx"
        class="{{chosenRankingKey === item.key ? 'ranking-on' : 'ranking-off'}}"
        bind:tap="onRankingKeyChanged" data-ranking-key="{{item.key}}"
      >
        {{item.text}}
      </view>
    </view>

    <view class="list">
      <CommodityCard
        wx:for="{{commodityList}}" wx:key="_id" wx:for-item="item"
        class="card"
        commodity="{{item}}"
      />
    </view>

    <view class="bottom">
      <view wx:if="{{isLoading}}" class="cu-load loading"></view>
      <block wx:else>
        <view class="no-more">
          <view class="actions">
            <view>到底啦~</view>
            <view class="action" bindtap="refreshCurrentTab">刷新</view>
            <block wx:if="{{selectedRegionIndex < regions.length - 1}}">
              <view>或</view>
              <view
                class="action"
                bind:tap="onRegionClick"
                data-idx="{{selectedRegionIndex + 1}}"
              >去“{{regions[selectedRegionIndex + 1].name}}”看看
              </view>
            </block>
          </view>
        </view>
      </block>
    </view>
  </view>
</scroll-view>

<view class="cu-modal bottom-modal {{showLoginPopup?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white">
      <view class="action text-blue"></view>
      <view class="action text-green" catch:tap="onCancelLoginPopup">取消</view>
    </view>
    <view class="padding">
      <button class="cu-btn block bg-green margin-tb-sm lg" open-type="getUserInfo" bindgetuserinfo="onAuth">
        注册后可进行更多操作
      </button>
    </view>
  </view>
</view>
