.region-filter {
  background: white;
  z-index: 1;
  position: sticky;
  top: 0;
  padding: 12rpx;
  width: 100%;
  display: flex;
}

.region-filter scroll-view {
  width: 660rpx;
  background: #f6f6f6;
  border-radius: 10rpx;
  white-space: nowrap;
}

.region-filter .item-on {
  margin: 0 18rpx;
  border-bottom: 5rpx solid #FAC000;
  line-height: 50rpx;
  font-size: 27rpx;
  color: #21AC39;
  font-weight: 500;
  font-style: italic;
  display: inline-block;
}

.region-filter .item {
  padding: 0 18rpx;
  line-height: 60rpx;
  font-size: 27rpx;
  color: #80899a;
  font-weight: 500;
  font-style: italic;
  display: inline-block;
}

.switch {
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx 0 5rpx 10rpx;
  /* 内边距有效提高点击范围，对图标大小影响 */
}

/* noinspection CssUnresolvedCustomProperty */
.list {
  width: 100%;
  height: 100%;
  flex-shrink: 0;

  --gap: 12rpx;
  padding: var(--gap);
  gap: var(--gap);
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  overflow-x: hidden;
}

/* noinspection CssUnresolvedCustomProperty */
.list .card {
  width: calc((100% - var(--gap)) / 2);
  border-radius: 16rpx;
  box-shadow: 0px 1px 2px 0px #17007333;
}

.bottom {
  height: 64rpx;
  padding-bottom: 24rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom .no-more {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.bottom .no-more .actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  gap: 8rpx;
}

.bottom .no-more .actions .action {
  color: rgb(76, 136, 255);
  font-weight: bold;
}
