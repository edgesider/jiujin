page {
  background-color: white !important;
}

.top-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  background-color: white;
}

.top {
  flex: 0;
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /*padding-left: var(--logo-width);*/
  /*border-bottom: 0.5px solid rgba(0, 0, 0, 0.3);*/

  --logo-width: 145rpx;
  --logo-ratio: calc(50 / 90);
}

.top .app-logo {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  margin-left: 20rpx;
  width: var(--logo-width);
  height: calc(var(--logo-ratio) * var(--logo-width));
}

.top .search {
  position: relative;
  z-index: inherit;
  line-height: 48rpx;
  height: 64rpx;
  width: 100%;
  margin: 0 20rpx;
  border-radius: 32rpx;
  border: 1px solid #21AC39
}

.top .search image {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: 13rpx;
  left: 20rpx;
}

.top-swiper {
  flex: 0;
  z-index: -1;
  width: 100%;
  height: calc(32vw);
  /*border-bottom: 0.5px solid rgba(0, 0, 0, 0.3);*/
}

