.root {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  overflow-x: scroll;
  overflow-y: hidden;
  padding-bottom: calc(env(safe-area-inset-bottom) + 48px);
}

.top {
  flex: 0;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  z-index: 10;
}

.top .app-name {
  margin-left: 8px;
  font-size: 20px;
  color: green;
  font-weight: bold;
  z-index: inherit;
}

.top .search {
  z-index: inherit;
  border: 0.5px solid rgba(0, 0, 0, 0.3);
  background-color: #f5f5f5;
  line-height: 48rpx;
  height: 48rpx;
  font-size: 20rpx;
  color: black;
  display: flex;
  align-items: center;
  border-radius: 24rpx;
  padding: 0 8px;
  margin-left: 32px;
}

.top .mask {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  z-index: inherit;
  background: white;
}

.regions-filter {
  position: sticky;
  background: white;
  z-index: 1;
  width: 100%;
  display: flex;
  overflow-x: scroll;
  padding: 6px;
}

.regions-filter .region {
  margin: 4px;
  border-radius: 24px;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6px 14px;
}

.regions-filter .region .name {
  font-size: 12px;
  color: black;
  word-break: keep-all;
}

.regions-filter .region-selected {
  font-size: 16px;
  font-weight: bold;
  color: black;
  word-break: keep-all;
  background-color: rgb(161, 227, 60);
}

.regions-filter .region-selected .name {
  font-weight: bold;
}

/* noinspection CssUnresolvedCustomProperty */
.list {
  width: 100%;
  height: 100%;

  --gap: 12px;
  margin: 0 var(--gap) var(--gap);
  gap: var(--gap);
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}

/* noinspection CssUnresolvedCustomProperty */
.list .card {
  width: calc((100% - var(--gap) * 3) / 2);
}