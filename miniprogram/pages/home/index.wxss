page {
  background-color: white !important;
}

.top-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  background-color: white;
}

.top {
  flex: 0;
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /*padding-left: var(--logo-width);*/
  /*border-bottom: 0.5px solid rgba(0, 0, 0, 0.3);*/

  --logo-width: 145rpx;
  --logo-ratio: calc(50 / 90);
}

.top .app-logo {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  margin-left: 20rpx;
  width: var(--logo-width);
  height: calc(var(--logo-ratio) * var(--logo-width));
}

.top .search {
  position: relative;
  z-index: inherit;
  line-height: 48rpx;
  height: 64rpx;
  width: 100%;
  margin: 0 20rpx;
  border-radius: 32rpx;
  border: 1px solid #21AC39
}

.top .search image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 15rpx;
  left: 20rpx;
}

.top-swiper {
  flex: 0;
  z-index: -1;
  width: 100%;
  height: calc(32vw);
  /*border-bottom: 0.5px solid rgba(0, 0, 0, 0.3);*/
}

.region-filter {
  background: white;
  z-index: 5;
  position: sticky;
  top: 0;
  padding: 12rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
}

.region-filter scroll-view {
  width: 660rpx;
  background: #f6f6f6;
  border-radius: 10rpx;
  white-space: nowrap;
}

.region-filter .item-on {
  margin: 0 18rpx;
  border-bottom: 5rpx solid #FAC000;
  line-height: 50rpx;
  font-size: 27rpx;
  color: #21AC39;
  font-weight: 500;
  font-style: italic;
  display: inline-block;
}

.region-filter .item {
  padding: 0 18rpx;
  line-height: 60rpx;
  font-size: 27rpx;
  color: #80899a;
  font-weight: 500;
  font-style: italic;
  display: inline-block;
}

.switch {
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx 0 5rpx 10rpx;
  /* 内边距有效提高点击范围，对图标大小影响 */
}

.ranking {
  z-index: 4;
  position: absolute;
  right: 15rpx;
  top: 330rpx;
  background: #ffffff;
  border: 2rpx solid #80899a;
  padding: 35rpx 23rpx;
  border-radius: 15rpx;
}

.ranking-on {
  line-height: 70rpx;
  color: #000000;
}

.ranking-off {
  line-height: 70rpx;
  color: #80899a;
}

/* noinspection CssUnresolvedCustomProperty */
.list {
  width: 100%;
  height: 100%;
  flex-shrink: 0;

  --gap: 12rpx;
  padding: var(--gap);
  gap: var(--gap);
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  overflow-x: hidden;
}

/* noinspection CssUnresolvedCustomProperty */
.list .card {
  width: calc((100% - var(--gap)) / 2);
  border-radius: 16rpx;
}

.bottom {
  height: 64rpx;
  padding-bottom: 24rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom .no-more {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.bottom .no-more .actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  gap: 8rpx;
}

.bottom .no-more .actions .action {
  color: rgb(76, 136, 255);
  font-weight: bold;
}
