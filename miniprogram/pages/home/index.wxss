/* miniprogram/pages/commodity_list/index.wxss */


.bar-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.hline {
  margin-bottom: 120rpx;
}

.regions-filter {
  width: 100%;
  display: flex;
  overflow-x: scroll;
  padding: 6px;
}

.regions-filter .region {
  margin: 4px;
  border-radius: 24px;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6px 14px;
}

.regions-filter .region .name {
  font-size: 12px;
  color: black;
  word-break: keep-all;
}

.regions-filter .region-selected {
  font-size: 16px;
  font-weight: bold;
  color: black;
  word-break: keep-all;
  background-color: rgb(161, 227, 60);
}

.regions-filter .region-selected .name {
  font-weight: bold;
}

/* noinspection CssUnresolvedCustomProperty */
.list {
  width: 100%;
  height: 100%;

  --gap: 12px;
  margin: 0 var(--gap) 48px;
  gap: var(--gap);
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}

/* noinspection CssUnresolvedCustomProperty */
.list .card {
  width: calc((100% - var(--gap) * 3) / 2);
}