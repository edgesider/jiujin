page {
  background-color: #fff !important;
}

.top-bar {
  z-index: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: sticky;
  top: 0;
}

.top-bar .back {
  font-size: 42rpx;
  margin: 0 18rpx;
}

.top-bar .input-container {
  position: relative;
  flex-grow: 1;
  height: 64rpx;
  border-radius: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: center;
  padding-left: 64rpx;
  padding-right: 24rpx;
  border: 1px solid #21AC39;
}

.top-bar .search-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 15rpx;
  left: 20rpx;
}

.top-bar .input {
  flex-grow: 1;
  font-size: 30rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.inputting {
  width: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 18rpx;
}

.inputting .title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 18rpx 0;
  position: relative;
}

.histories {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: 18rpx;
}

.histories-item {
  height: 68rpx;
  line-height: 1;
  font-size: 36rpx;
  color: #979797;
  width: fit-content;
  background: #f1f1f1;
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.histories-clear {
  margin-right: 18rpx;
  position: absolute;
  right: 0;
  font-size: 28rpx;
  font-weight: normal;
}

.filters {
  margin-top: 8rpx;
  width: 100%;
  height: 62rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.filters .item {
  color: #979797;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.filters .item .arrows {
  margin-left: 8rpx;
  width: 14rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.filters .item .arrows .arrow {
  width: 14rpx;
  height: 14rpx;
}

.filters .item .arrows .arrow.arrow-down {
  transform: rotate(180deg);
}

.commodity-list-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.commodity-list-container .list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: stretch;

  --gap: 18rpx;
  padding: var(--gap);
  gap: var(--gap);
}

.commodity-list-container .item {
  width: calc(50% - var(--gap) / 2);
}
