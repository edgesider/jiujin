<TitleBar title="消息" hasBack="{{false}}" />

<view class="header">
  <view class="item">
    <image class="icon" src="/images/chat-comment.png" />
    <text class="text">留言</text>
    <view class="dot" />
  </view>
  <view class="item">
    <image class="icon" src="/images/chat-like.png" />
    <text class="text">点赞</text>
    <view class="dot" />
  </view>
  <view class="item">
    <image class="icon" src="/images/chat-star.png" />
    <text class="text">收藏</text>
    <view class="dot" />
  </view>
</view>

<scroll-view
  class="list"
  scroll-y
  refresher-enabled="{{true}}"
  refresher-triggered="{{refreshing}}"
  bindrefresherrefresh="onRefresh"
>
  <Conversation
    class="conversation"
    wx:for="{{conversations}}"
    wx:for-index="idx"
    wx:key="conversationID"
    conversationId="{{item.conversationID}}"
    conversationIndex="{{idx}}"
  />
</scroll-view>
<view style="width: 100%; flex: 0 0 {{BottomBarHeight}}px" />
