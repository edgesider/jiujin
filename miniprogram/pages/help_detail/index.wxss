/* pages/help_detail/index.wxss */
.root {
  background: white;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}

.body {
  height: 100rpx;
  width: 100%;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.body .content {
  --content-padding: 20rpx;
  background: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding-top: 20rpx;
}

.divider {
  flex-basis: 1px;
  flex-grow: 0;
  flex-shrink: 0;
  background-color: #f1f1f1;
}

.body .content .images {
  width: 100%;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.body .content .images-single {
  width: 100%;
  max-height: 120vw;
}

.body .content .images-single image {
  width: 100%;
  height: 100%;
}

.body .content .images-multi {
  --gap: 10rpx;
  --column: 3;
  flex: 1 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--gap);
  padding: 0 var(--content-padding);
}

.body .content .images-multi image {
  border-radius: 8rpx;
  width: calc((100vw - var(--gap) * (var(--column) - 1) - var(--content-padding) * 2) / var(--column));
  height: calc((100vw - var(--gap) * (var(--column) - 1) - var(--content-padding) * 2) / var(--column));
}

.body .content .info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 var(--content-padding);
}

.body .content .info .bounty {
  align-self: flex-start;
  height: 80rpx;
  min-width: 80rpx;
  background: linear-gradient(180deg, var(--brand-yellow) 0%, #FF4D4D 100%);
  flex-grow: 0;
  flex-shrink: 0;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 6rpx 8rpx;
}

.body .content .info .bounty .text {
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
}

.body .content .info .bounty .price {
  color: #fff;
  display: flex;
  font-weight: bold;
  transform: translateX(-4rpx);
}

.body .content .info .bounty .unit {
  font-size: 24rpx;
}

.body .content .info .bounty .amount {
  font-size: 32rpx;
}

.body .content .paragraphs {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 12rpx 0;
}

.body .content .paragraph {
  font-size: 32rpx;
  line-height: 48rpx;
  padding: 0 var(--content-padding);
  user-select: text;
  color: #454545;
}

.body .comments {
  background: white;
}

.footer {
  flex-grow: 0;
  flex-shrink: 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 24rpx 20rpx;
}

.footer .left {
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 24rpx;
}

.footer .left .button {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 4rpx;
}

.footer .left .button .icon {
  width: 48rpx;
  height: 48rpx;
}

.footer .left .button .text {
  font-size: 20rpx;
  font-weight: 500;
  color: #979797;
}

.footer .left .button button {
  border: none;
  background-color: transparent;
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.footer .right {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.footer .right .polish-time {
  margin-right: 24rpx;
  flex-shrink: 1;
  font-size: 24rpx;
  text-align: right;
  color: rgba(0, 0, 0, 0.7);
}

.footer .right .polish-time-hint {
  flex-shrink: 1;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.5);
  text-align: right;
}

.footer .right .button {
  margin-right: 10rpx;

  padding: 14rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
  border-radius: 16rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  background: var(--brand-green);
  color: #fff;
}

.footer .right .button.button-yellow {
  background: var(--brand-yellow);
}

.footer .right .button.button-yellowgreen {
  background: var(--brand-yellowgreen);
}

.footer .right .button.button-green {
  background: var(--brand-green);
}

.button-disabled {
  opacity: 0.3;
}
