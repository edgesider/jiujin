/* miniprogram/pages/commodity_list/commodity_list.wxss */


.commodity-card{
  background-color: #ffffff !important;
  border-radius: 20rpx;
  margin:3px 6px;
}

.bar-wrapper{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.hline{
  margin-bottom: 120rpx;
}

.regions-filter {
  width: 100%;
  height: 48px;
  display: flex;
  overflow-x: scroll;
}

.regions-filter .region {
  margin: 4px;
  height: 40px;
  border-radius: 24px;
  background-color: greenyellow;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 24px;
}

.regions-filter .region text {
  font-size: 16px;
  font-weight: bold;
  color: black;
  word-break: keep-all;
}