/* miniprogram/pages/commodity_list/commodity_list.wxss */


.commodity-card {
  background-color: #ffffff !important;
  border-radius: 20rpx;
  margin: 3px 6px;
}

.bar-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.hline {
  margin-bottom: 120rpx;
}

.regions-filter {
  width: 100%;
  display: flex;
  overflow-x: scroll;
  padding: 6px;
}

.regions-filter .region {
  margin: 4px;
  border-radius: 24px;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6px 14px;
}

.regions-filter .region .name {
  font-size: 12px;
  color: black;
  word-break: keep-all;
}

.regions-filter .region-selected {
  font-size: 16px;
  font-weight: bold;
  color: black;
  word-break: keep-all;
  background-color: rgb(161, 227, 60);
}

.regions-filter .region-selected .name {
  font-weight: bold;
}

.list {
  width: 100%;
  height: 100%;
  padding: 0 12px 48px;
  display: flex;
  gap: 12px;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.list .row {
  width: 100%;
  display: flex;
  justify-content: stretch;
  align-items: center;
  gap: 12px;
}

.list .row .card {
  flex-grow: 1;
  height: fit-content;
}