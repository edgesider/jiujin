.title-bar {
  width: 100%;
  height: auto;
  flex: 0 0 auto;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}

.content-container {
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: center;
}

.tabs {
  height: 64rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin: 0 0 8rpx;
}

.tabs .tab {
  font-size: 28rpx;
  border-bottom: 4rpx solid transparent;
}

.tabs .tab.selected {
  font-weight: bold;
  padding: 4rpx 0;
  border-bottom: 4rpx solid green;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

scroll-view {
  flex: 1;
  height: 0;
}

.card {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 0 24rpx;
  background: white;
  height: auto;
}

.card:last-of-type {
  border-bottom: none;
}

.full-loading {
  position: absolute;
  left: 50%;
  top: 400rpx;
  transform: translateX(-50%);
}

.empty {
  position: absolute;
  height: 500rpx;
  left: 50%;
  top: 200rpx;
  transform: translateX(-50%);
}