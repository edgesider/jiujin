.content-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: center;
}

.state-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user {
  width: 100%;
  height: auto;
  padding: 24rpx 12rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: white;
}

.user .avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user .infos .region-name {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 4rpx;
}

.user .infos .region-name image {
  width: 28rpx;
  height: 28rpx;
}

.user .infos .last-seen {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.6);
}

.state-text {
  width: 100%;
  padding-left: 20rpx;
  margin-top: 12rpx;
  color: #3c3c3c;
  font-size: 32rpx;
  font-weight: bold;
}

.filters {
  margin-top: 32rpx;
  padding: 0 24rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 16rpx;
}

.filters .filter {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.filters .filter.selected {
  font-weight: bold;
}

.list {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;

  --gap: 12rpx;
  gap: var(--gap);
  padding: var(--gap);
}

.list .commodity {
  width: calc((100% - var(--gap)) / 2);
  border-radius: 16rpx;
}

.list .commodity-container {
  width: 50%;
  padding: 24rpx;
}

.list .commodity-container .commodity {
  width: 100%;
  height: 100%;
}