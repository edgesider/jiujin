<TitleBar title="我的" hasBack="{{false}}" />
  <!-- 头像、昵称、位置、设置入口 -->
<view class="User" style="margin-top: {{0}}px">
  <image class="avatar" src="{{selfInfo.avatar_url || DEFAULT_AVATAR}}" mode="aspectFill"></image>
  <view class="info">
    <view class="name">
      <text>{{selfInfo.name || '欢迎来到楼里楼外'}}</text>
      <text class="{{user.gender === GENDER.MALE ? 'men' : 'women'}}">{{user.gender === GENDER.MALE ? '♂' : '♀'}}</text>
    </view>
    <view class="region" wx:if="{{selfInfo.rid > 0}}">
      <image class="icon" src="/images/location.png" />
      <view class="name">{{regionName}}</view>
    </view>
  </view>
  <view class="spacer" />
  <view bindtap="onEditMyInfo" class="settings">资料设置</view>
</view>

<view class="List">
  <navigator url="./mall/mall" class="list">
    <view class="list_title">我发布的闲置</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <navigator url="./help/help" class="list">
    <view class="list_title">我发布的互助</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
</view>

<view class="List">
  <navigator bindtap="onClickMyBought" class="list">
    <view class="list_title">我买到的</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <navigator url="./sell/sell" class="list">
    <view class="list_title">我卖出的</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <navigator url="./delist/delist" class="list">
    <view class="list_title">我下架的</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <navigator bindtap="onClickMyStarred" class="list">
    <view class="list_title">我收藏的</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <navigator url="./like/like" class="list">
    <view class="list_title">我点赞的</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
</view>

<view class="List">
  <navigator url="./" class="list">
    <view class="list_title">联系我们</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
  <view class="divider" />
  <view class="list">
    <view class="list_title">意见反馈</view>
    <image class="right" src="/images/right.png"></image>
    <button open-type="feedback" class="feedback-btn" />
  </view>
  <view class="divider" />
  <navigator url="./" class="list">
    <view class="list_title">关于我们</view>
    <image class="right" src="/images/right.png"></image>
  </navigator>
</view>
