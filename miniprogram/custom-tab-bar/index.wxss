@import "/app.wxss";

.root {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;

  background: white;
}

.tab-bar {
  width: 100%;
  height: 48px;
  border-top: 0.5px solid rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.safe-area {
  width: 100%;
  height: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.icon {
  position: relative;
}

.unread-count {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 26rpx;
  height: 26rpx;
  font-size: 14rpx;
  line-height: 26rpx;
  background-color: red;
  color: white;
  border-radius: 50%;
}

.icon {
  width: 27px;
  height: 27px;
  font-size: 22px !important;
}

.text {
  font-size: 10px;
}
