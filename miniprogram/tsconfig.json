{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "./ext.d.ts",
    "./**/*.js",
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}