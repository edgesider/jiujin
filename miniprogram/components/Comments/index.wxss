.root {
  background: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 24rpx 20rpx;
}

.title {
  color: #3c3c3c;
  font-size: 32rpx;
  font-weight: bold;
}

.input-area {
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: center;
}

.input-area .my-avatar {
  flex: 0 0 auto;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.input-area .fake-input {
  flex-grow: 1;
  color: #979797;
  background: #f1f1f1;
  height: 60rpx;
  border-radius: 30rpx;
  margin-left: 8rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.input-area .send-btn {
  height: 56rpx;
  border-radius: 28rpx;
  margin-left: 16rpx;
  font-size: 24rpx;
  background: aquamarine;
  padding: 12rpx 28rpx 0;
}

.comments {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.comment {
  font-size: 28rpx;
}

.question {
  margin: 40rpx 0 0;
  width: 100%;
  flex-grow: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.question .avatar {
  background: green;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-top: 8rpx;
  margin-right: 16rpx;
  flex: 0 0 auto;
}

.question .right {
  flex-grow: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.question .right .username {
  max-width: 80%;
  color: rgba(0, 0, 0, 0.5);
  height: 1.2em;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
}

.question .right .content {
  margin-top: 8rpx;
  width: 100%;
  word-break: break-all;
  line-height: 1.5em;
}

.answer {
  width: 100%;
  flex-grow: 0;
  overflow: hidden;
  margin-top: 16rpx;
  padding-left: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  font-size: 24rpx;
}

.answer .username {
  color: rgba(0, 0, 0, 0.5);
  flex-shrink: 0;
  word-break: keep-all;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.answer .colon {
  color: rgba(0, 0, 0, 0.5);
}

.answer .content {
  word-break: break-all;
  flex-grow: 0;
  user-select: text;
  line-height: 1.4em;
}

.delete-btn {
  width: 48rpx;
  height: 30rpx;
  color: white;
  font-size: 20rpx;
  background-color: red;
  text-align: center;
  border-radius: 20%;
  right: 0;
}

.popup-input {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1000000;

  opacity: 0;
  animation: popup-opacity ease-in-out 0.1s forwards;

  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

@keyframes popup-opacity {
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
}

.popup-input .mask {
  background: rgba(0, 0, 0, .5);
  width: 100%;
  flex-grow: 1;
}

.popup-input .input-line {
  width: 100%;
  padding: 20rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 20rpx;
}

.input-line .input {
  height: 6em;
  flex: 1 0 40rpx;
  border-radius: 16rpx;
  background: #f1f1f1;
  padding: 20rpx;
  line-height: 1.5;
}

.input-line .button {
  flex-shrink: 0;
  padding: 16rpx 48rpx;
  height: 74rpx;
  border-radius: 37rpx;
  background: #21ac39;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}