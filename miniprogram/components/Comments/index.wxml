<view class="root">
  <view class="title">{{comments.length}} 条留言</view>
  <view class="input-area">
    <image
      src='{{selfInfo.avatar_url || DEFAULT_AVATAR}}'
      class="my-avatar"
      bindtap="openMyProfile"
    />
    <view
      class="fake-input"
      bindtap="onStartComment"
    >
      {{selfInfo._id === commodity.seller_id ? '补充点信息吧~' : '问问更多细节~'}}
    </view>
  </view>
  <view class="comments" wx:if="{{comments.length > 0}}">
    <view
      wx:for="{{comments}}"
      wx:for-item="comment"
      wx:key="_id"
    >
      <view wx:if="{{comment.type === 'question'}}" class="comment question">
        <image
          class="avatar"
          src="{{comment.user.avatar_url}}"
          bindtap="openProfile"
          data-comment="{{comment}}"
        />
        <view class="right" bindtap="onStartComment" data-comment="{{comment}}">
          <view class="username">
            {{comment.user.name}}
          </view>
          <view
            class="content"
            bindtap="onStartComment"
            data-comment="{{comment}}"
            bind:longpress="onDeleteItem"
          >
            {{comment.content}}
          </view>
        </view>
      </view>
      <view wx:else class="comment answer">
        <view class="username">{{comment.user.name}}</view>
        <view class="colon">：</view>
        <view class="content">{{comment.content}}</view>
      </view>
    </view>
  </view>
  <view wx:if="{{commenting}}" class="popup-input">
    <view class="mask" bindtap="onEndComment" />
    <view
      class="input-line"
      style="margin-bottom: {{keyboardHeight}}px"
    >
      <view class="hint">{{commentingTo ? '回复@' + commentingTo.user.name : '留言'}}：</view>
      <input
        class="input"
        value="{{commentingText}}"
        focus="{{true}}"
        adjust-position="{{false}}"
        confirm-type="send"
        maxlength="10240"
        bindinput="onPopupInput"
        bindconfirm="onConfirmComment"
      />
    </view>
  </view>
</view>