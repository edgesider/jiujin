<view class="root">
  <view class="title">{{comments.length}}条留言</view>
  <view class="input-area">
    <image src="{{selfInfo.avatar_url}}" class="my-avatar" />
    <input class="input" placeholder="{{selfInfo._id === commodity.sell_id ? '补充点信息吧~' : '问问更多细节~'}}" model:value="{{input}}" bindinput="nop" />
    <view class="send-btn" bindtap="sendQuestion">发送</view>
  </view>
  <view class="comments" wx:if="{{comments.length > 0}}">
    <block
      wx:for="{{comments}}"
      wx:for-item="comment"
      wx:key="_id"
    >
      <view wx:if="{{comment.type === 'question'}}" class="comment question">
        <image src="{{comment.user.avatar_url}}" class="avatar" />
        <view class="right">
          <view class="username">
            {{comment.user.name}}
          </view>
          <view class="content">
            {{comment.content}}
          </view>
        </view>
      </view>
      <view wx:else class="comment answer">
        <view class="username">{{comment.user.name}}</view>
        <view class="colon">：</view>
        <view class="content">{{comment.content}}</view>
      </view>
    </block>
  </view>
</view>