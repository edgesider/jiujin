<view class="button {{color}}" style="opacity: {{disabled ? 0.3 : 1}}">
  {{text}}
  <image wx:if="{{suffixIcon}}" class="suffix-button" src="{{suffixIcon}}" mode="scaleToFill" />
  <button
    wx:if="{{share}}"
    open-type="share" plain="true"
    style="border: none; background-color: transparent; position: absolute; width: 100%; height: 100%;"
  />
</view>
