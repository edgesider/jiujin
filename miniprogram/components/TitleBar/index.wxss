@import "/app.wxss";

.top {
  background: white;
  position: relative;
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.top .back {
  padding: 0 16rpx;
  font-size: 42rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.top .title {
  justify-self: center;
  align-self: center;
  font-size: 32rpx;
  font-weight: bold;
}
