@import "/app.wxss";

.top {
  background: white;
  position: relative;
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.2);
}

.top .back {
  height: 100%;
  padding: 0 24rpx;
  font-size: 36rpx;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top .title {
  justify-self: center;
  align-self: center;
  font-size: 32rpx;
  font-weight: bold;
}
