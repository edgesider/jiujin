.mall {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  float: left;
  font-size: 0;
  box-shadow: 0 0 4px 0 #17007333;
}

.cover {
  width: 100%;
  height: 250rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.name {
  width: 96%;
  margin: 2%;
  font-size: 30rpx;
  font-weight: 500;
  color: #1f1f1d;
}

.Price {
  float: right;
  width: 96%;
  height: 50rpx;
  margin: 0 2%;
}

.price_rmb {
  font-size: 22rpx;
  font-style: italic;
  color: #21AC39;
  line-height: 60rpx;
  font-weight: bold;
  float: left;
}

.price {
  font-size: 38rpx;
  font-style: italic;
  color: #21AC39;
  font-weight: bold;
  float: left;
}

.location {
  color: #80899a;
  font-size: 20rpx;
  line-height: 50rpx;
  height: 50rpx;
  float: right;
}

.location_icon {
  width: 20rpx;
  height: 30rpx;
  margin: 10rpx 0;
  float: right;
}
