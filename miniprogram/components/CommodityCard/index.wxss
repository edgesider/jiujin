.root {
  height: 330rpx;
  border-radius: 16rpx;
  position: relative;
}

.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.bg-placeholder {
  background: rgba(0, 0, 0, 0.1);
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: red;
  background: rgba(255, 255, 255);
  border-radius: 16rpx;
  padding: 12rpx 16rpx;

  margin: 8rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.quality {
  font-size: 32rpx;
  font-style: italic;
  color: black;
  background: rgba(255, 255, 255);
  border-radius: 16rpx;
  padding: 12rpx 16rpx;

  margin: 8rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.bottom {
  width: 100%;
  height: fit-content;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 8rpx;

  padding: 8rpx;
}

.bottom .content {
  height: calc(1em + 8rpx);
  font-size: 24rpx;
  color: white;
  background: rgba(0, 0, 0);
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  flex-grow: 1;
  overflow: hidden;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.bottom .region {
  font-size: 24rpx;
  color: white;
  background: rgba(0, 0, 0);
  border-radius: 8rpx;
  flex-shrink: 0;
  padding: 4rpx 8rpx;
}
